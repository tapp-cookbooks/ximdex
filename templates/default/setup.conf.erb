#-------- for ximdb.sh---------
$SERVER_DB="<%= node['mysql']['bind_address'] %>"   #host where database is localized
$PORT_DB="3306"											#The TCP/IP port number to use for the connection. 
$USER_ADMIN="root"   										#database admin user
$PASSWD_ADMIN="<%= node['mysql']['server_root_password'] %>"
$CREATE_USER=<%= node['ximdex']['create_database_user'] %> 				#create user if it does not exists (1=yes|0=no)
$USER_DB="<%= node['ximdex']['db_user'] %>"             							#database user (no admin perms needed)
$PASSWD_DB="<%= node['ximdex']['db_passwd'] %>"
$DATABASE="<%= node['ximdex']['database'] %>"            							#database for ximdex
$OVERWRITE_DATABASE=<%= node['ximdex']['overwrite_database'] %>										#overwrite database if it already exists ((1=yes|0=no)
#-------- for ximparams.sh---------
$XIMDEX_PARAMS_HOST="<%= node['ximdex']['params_host'] %>"
$XIMDEX_PARAMS_PATH="<%= node['ximdex']['params_path'] %>"              #absolute path to ximdex
$XIMDEX_USER="<%= node['ximdex']['db_user'] %>"                              #admin user for ximdex interface
$XIMDEX_PASSWD="<%= node['ximdex']['db_passwd'] %>"
$XIMDEX_LOCALE="<%= node['ximdex']['locale'] %>"                             #default locale for ximdex
$XIMDEX_STATS=<%= node['ximdex']['send_stats'] %>                                   #stats? (yes(1) or no(0))
#-------- for ximintialize.sh---------
$REMOVE_DATANODES=1                                #Do you want to remove your data/nodes files?
$PROJECT_DEMO=2											   #Do you want to install one of our demo projects? (0=none, 1=AdreesBook, 2=>Picasso, 3=>The hobbit)
$DEFAULT_MODULES=1								 			#Do you want to install our recommended modules? (1=y|0=n)
$IN_CRONTAB=1                                      #Do you want to add Automatic and Scheduler to your crontab? (1=y|0=n)

